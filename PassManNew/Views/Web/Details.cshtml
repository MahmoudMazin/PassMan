@using PassManNew.Resources
@inject LocalizationService Localizer
@model PassManNew.Models.WebViewModel

@{
    ViewData["Title"] = Localizer.GetLocalized("Web");
}


<div class="block-header">
    <h1> @ViewData["Title"]</h1>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <div class="row clearfix">

                    <form asp-action="Create" method="post">
                    
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-sm-4">

                            <div class="form-group">
                                <label asp-for="WebName"></label>
                                <div class="form-line">
                                    <input asp-for="WebName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.WebName)" readonly />
                                </div>
                                <span asp-validation-for="WebName" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="JsonRPA"></label>
                                <div class="form-line">
                                    <textarea rows="4" asp-for="JsonRPA" class="form-control" placeholder="@Html.DisplayNameFor(model => model.JsonRPA)" readonly></textarea>
                                </div>
                                <span asp-validation-for="JsonRPA" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="UserNameField"></label>
                                <div class="form-line">
                                    <input asp-for="UserNameField" class="form-control" placeholder="@Html.DisplayNameFor(model => model.UserNameField)" readonly />
                                </div>
                                <span asp-validation-for="UserNameField" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PwdNameField"></label>
                                <div class="form-line">
                                    <input asp-for="PwdNameField" class="form-control" placeholder="@Html.DisplayNameFor(model => model.PwdNameField)" readonly />
                                </div>
                                <span asp-validation-for="PwdNameField" class="text-danger"></span>
                            </div>

                            <br />

                            <a asp-action="Edit" class="btn bg-yellow waves-effect" asp-route-id="@Model.WebName">@Localizer.GetLocalized("Edit")</a> |
                            <button type="button" class="btn bg-blue waves-effect" onclick="window.location.href = '/Web/Index/'">@Localizer.GetLocalized("Back to List")</button>

                        </div>
                  
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>