@model PassManNew.Models.SignInViewModel

@{
    // ViewData["Title"] = @LocOptions.GetLocalized("Sign In");
    ViewData["Title"] = "Sign In";

}
<style>
    .sl-flag {
        display: inline-block;
        box-shadow: 0px 0px 3px rgba(0,0,0,0.4);
        width: 15px;
        height: 15px;
        background: #aaa;
        border-radius: 50%;
        position: relative;
        top: 2px;
        overflow: hidden;
    }

    .ar-SA {
        background: url('data:image/png;base64,');
        background-size: cover;
        background-position: center center;
    }

    .en-US {
        background-size: cover;
        background-position: center center;
        background: url('data:image/png;base64,');
    }
</style>

<div class="login-page">
    <div class="login-box">
        @* <div class="logo">
        <a href="javascript:void(0);"><b>@LocOptions.GetLocalized("SIDC")</b></a>
        <small>@LocOptions.GetLocalized("Business Application")</small>
        </div> *@
        <div class="card">
            <div class="body">

                <form id="account" method="post">
                    @*  <div class="msg">@Localizer.GetLocalized("Sign in to start your session")</div> *@
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">person</i>
                        </span>
                        <div class="form-line">
                            <input asp-for="@Model.Email" class="form-control" placeholder="Email" autofocus />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input asp-for="@Model.Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 p-t-5">

                            <input asp-for="@Model.RememberMe" class="filled-in chk-col-pink" /> @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                            <label asp-for="@Model.RememberMe"></label>
                        </div>
                        <div class="col-xs-6">
                            @* <button class="btn btn-block bg-pink waves-effect" type="submit">@Localizer.GetLocalized("Sign In")</button> *@
                            <button class="btn btn-block bg-pink waves-effect" type="submit">SignIn</button>
                        </div>
                    </div>
                    <div class="row m-t-15 m-b--20">
                        <div class="col-xs-6">
                            @* <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>*@
                            @* @foreach (var item in LocOptions.Value.SupportedUICultures)
                            {
                            if (Thread.CurrentThread.CurrentCulture.Name != item.Name)
                            {
                            <a asp-controller="Culture" asp-action="SetCulture" asp-route-returnUrl="@returnUrl" asp-route-culture="@item.Name"><i class="sl-flag @item.Name"> </i><span> @item.TwoLetterISOLanguageName.ToUpper() </span></a>
                            }
                            }
                            </div> *@
                            @*  <div class="col-xs-6 align-right">
                            <a id="forgot-password" asp-page="./ForgotPassword">@Localizer.GetLocalized("Forgot your password?")</a>
                            </div> *@
                        </div>
                </form>
            </div>
        </div>
    </div>

</div>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <environment include="Development">
        <script src="~/js/admin.js"></script>
        <script src="~/js/pages/examples/sign-in.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/admin.js"></script>
        <script src="~/js/pages/examples/sign-in.js"></script>
    </environment>
}