@model PassManNew.Models.CompanyViewModel
@using PassManNew.Resources
@inject LocalizationService Localizer

@{
    ViewData["Title"] = Localizer.GetLocalized("Company Project");
}

@section Css {

}

<div class="block-header">
    <h1> @ViewData["Title"]</h1>
</div>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <div class="row clearfix">

                    <form asp-action="Create" method="post" enctype="multipart/form-data">

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-sm-4">

                            <div class="form-group">
                                <label asp-for="CompanyName"></label>
                                <div class="form-line">
                                    <input asp-for="CompanyName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.CompanyName)" />
                                </div>
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <div class="form-line">
                                    <textarea rows="4" asp-for="Address" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Address)"></textarea>
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Logo"></label>
                                <div class="form-line">
                                    <input asp-for="Logo" type="file" />
                                </div>
                                <span>@Localizer.GetLocalized("Recommended size: 144x144 px and Type: Jpeg")</span>
                                <span asp-validation-for="Logo" class="text-danger"></span>
                            </div>
                            <br />
                            <button type="submit" class="btn btn-success waves-effect">@Localizer.GetLocalized("Create")</button> |
                            <a asp-area="" class="btn bg-blue waves-effect" asp-action="Index">@Localizer.GetLocalized("Back to List")</a>

                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>



@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
