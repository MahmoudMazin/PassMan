@using PassManNew.Resources
@inject LocalizationService Localizer
@model PassManNew.Models.ServiceViewModel
@{
    ViewData["Title"] = Localizer.GetLocalized("Service Details");
}

<div class="block-header">
    <h1> @ViewData["Title"]</h1>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <div class="row clearfix">

                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="SectionId" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-sm-4">


                            <div class="form-group">
                                <label asp-for="CompanyName"></label>
                                <div class="form-line">
                                    <input asp-for="CompanyName" class="form-control no-resize" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="DeptName"></label>
                                <div class="form-line">
                                    <input asp-for="DeptName" class="form-control no-resize" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="SectionName"></label>
                                <div class="form-line">
                                    <input asp-for="SectionName" class="form-control no-resize" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ServiceName"></label>
                                <div class="form-line">
                                    <input asp-for="ServiceName" class="form-control no-resize" readonly />
                                </div>
                            </div>


                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <div class="form-line">
                                    <textarea rows="4" asp-for="Description" class="form-control" readonly></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="State"></label>
                                <div class="form-line">
                                    <input asp-for="State" class="form-control no-resize" readonly />
                                </div>
                            </div>
                            <br />
                            <a asp-action="Edit" class="btn bg-yellow waves-effect" asp-route-id="@Model.Id">@Localizer.GetLocalized("Edit")</a> |
                            <button type="button" class="btn bg-blue waves-effect" onclick="window.location.href = '/Services/Index/' + $('#SectionId').val();">@Localizer.GetLocalized("Back to List")</button>

                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label asp-for="Logo"></label> <br />
                                @if (Model.ExistingLogo != null)
                                {
                                    <img src="data:image;base64,@System.Convert.ToBase64String(Model.ExistingLogo)" alt="Dept" /> <br /><br />
                                    <br /> <br />
                                }
                                else
                                {
                                    <text>@Localizer.GetLocalized("Not Available")</text>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>